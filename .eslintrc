{
  "extends": "eslint-config-airbnb",
  "parser": "babel-eslint",
  "rules": {
    "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js"]}],
    "no-console": "off",
    "object-shorthand": "off",
    "no-var": "off",
    "require-yield": "off",
    "prefer-arrow-callback": "off"
  }
}
